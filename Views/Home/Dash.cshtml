
<div style="background: none repeat scroll 0 0 #FFFFFF;
    border: 4px solid #DDDDDD;
    border-radius: 6px 6px 6px 6px;
    bottom: 220px;
    right: auto;
    margin-left: 800px;
    padding: 30px 0 0;
    position: fixed;
    text-align: center;
    width: 400px;
    z-index: 15;">
    <p class="lead">Panel de información</p>
    <p class="lead">Nombre: @ViewBag.Msg2</p>
    <p class="lead">Usuario: @ViewBag.Msg3</p>
    <p class="lead">Edad: @ViewBag.Msg4</p>
    <p class="lead">Correo: @ViewBag.Msg5</p>
</div>



        <font face="Brush Script MT">
            <font size="200"<p>Publicar archivo</p></font>
        </font>
        <div>
            <form class="form" method="post">
                <font face="Didot" </font><p class="lead">Introduzca su usuario:</p>
                <input type="text" size="60" maxlength="60" value="" name="user" required pattern="[a-zA-Z0-9]{1,15}" title="Usuario no valido"><br><br>
                <font face="Didot" </font><p class="lead">Cantidad deseada (MXN):</p>
                <input type="text" size="60" maxlength="60" value="" name="money" required pattern="[0-9]{1,15}" title="La cantidad debe ser en números"><br><br>
                <font face="Didot" </font><p class="lead">Num. de tarjeta:</p>
                <input type="text" size="60" maxlength="60" value="" name="card" required pattern="[0-9]{11}" title="La cuenta debe contener 11 dígitos numéricos"><br><br>
                <font face="Didot" </font><p class="lead">Archivo:</p>
                <input type="file" id="file" name="avatar" required accept="image/png, image/jpeg"><br><br><br>
                <button class="btn btn-primary" type="submit">Publicar</button>
            </form>
        </div><br><br>


